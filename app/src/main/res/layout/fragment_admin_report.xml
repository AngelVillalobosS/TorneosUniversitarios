<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="16dp"
        android:rowOrderPreserved="true">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReporteConteo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="📊 Reporte de Conteo"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReportePartidos"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="⚽ Reporte de Partidos Concluidos"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReporteJugadores"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="👥 Reporte de Jugadores Registrados"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReporteEquipos"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="🏆 Reporte de Datos de Equipos"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </GridLayout>
</ScrollView>
