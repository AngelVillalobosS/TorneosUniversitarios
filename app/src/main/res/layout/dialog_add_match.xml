<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Spinner android:id="@+id/spTeamA" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spTeamB" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <EditText android:id="@+id/etMatchDate" android:hint="Fecha (YYYY-MM-DD)" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <EditText android:id="@+id/etMatchTime" android:hint="Hora (HH:MM)" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <EditText android:id="@+id/etMatchPlace" android:hint="Lugar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
</LinearLayout>
