<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Registrar evento" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spEventType" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
    <EditText android:id="@+id/etPlayerId" android:hint="ID jugador" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <EditText android:id="@+id/etMinute" android:hint="Minuto" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <Button android:id="@+id/btnRegisterEvent" android:text="Registrar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
</LinearLayout>
